{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"allowJs": true,
		"checkJs": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"target": "ES2022",
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"dist/**/*",
		"build/**/*"
	]
}