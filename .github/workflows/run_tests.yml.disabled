name: Run all tests

on:
  push:
  pull_request:
  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

jobs:
  get-sourcecode:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: get secrets
        run: |
          mkdir tokens
          echo "MYSQL_ROOT_PASSWORD=${{secrets.MYSQL_ROOT_PASSWORD}}" > tokens/.env
          echo "MYSQL_DATABASE=${{vars.MYSQL_DATABASE}}" >> tokens/.env
          echo "JWT_SECRET_KEY=${{secrets.JWT_SECRET_KEY}}" >> tokens/.env
          echo "AWS_SECRET_ACCESS_KEY=${{secrets.AWS_SECRET_ACCESS_KEY}}" >> tokens/.env
          echo "AWS_ACCESS_KEY_ID=${{secrets.AWS_ACCESS_KEY_ID}}" >> tokens/.env

      - name: Show contents of workspace
        run: ls -aR

      - name: Set up Docker
        uses: docker/setup-docker-action@v4
        with:
          version: "27.4.0" # Ensure a version with Compose V2 support

      - name: Verify Docker Compose
        run: |
          docker compose version

      - name: Create cache directory
        run: mkdir -p /tmp/.buildx-cache

      - name: Cache Docker Layers
        uses: actions/cache@v3
        with:
          path: /tmp/.buildx-cache
          key: ${{ runner.os }}-buildx-${{ hashFiles('**/*Dockerfile', '**/.dockerignore', '**/requirements.txt', '**/web/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-buildx-

      - name: Cache Node.js dependencies
        uses: actions/cache@v3
        with:
          path: |
            ~/.npm
            ./web/.node_modules
          key: ${{ runner.os }}-node-${{ hashFiles('web/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: install node dependencies
        working-directory: ./web
        run: |
          echo "//npm.pkg.github.com/:_authToken=${{ secrets.ACCESS_PACKAGES_PAT }}" > ~/.npmrc
          npm ci
          # npm run build

      - name: Start the app
        working-directory: ./web
        run: |
          npm run build
        env:
          PORT: ${{vars.WEB_PORT}}

      - name: Set up Python and Install Dependencies
        uses: actions/setup-python@v4
        with:
          python-version: "3.12"
          cache: "pip" # Automatically caches pip dependencies based on requirements.txt

      - name: Install Deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Cache Playwright browsers
        uses: actions/cache@v4
        with:
          path: ~/.cache/ms-playwright
          key: ${{ runner.os }}-playwright-${{ hashFiles('web/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-playwright-

      - name: Install Deps
        working-directory: ./web
        run: |
          npx playwright install --with-deps

      - name: Build services using docker-compose, use cache to avoid full rebuild #cache not working
        env:
          COMPOSE_DOCKER_CLI_BUILD: 1
          DOCKER_BUILDKIT: 1
        run: |
          docker compose build --progress=plain

      - name: Start the server  under test
        run: |
          docker compose up -d
          docker ps  # Verify containers are running

      - name: Start web app
        working-directory: ./web
        run: |
          PORT=${{vars.WEB_PORT}} npm run preview &

      - name: Run Tests with code coverage
        working-directory: ./web
        run: |
          # Wait for the server to be ready
          echo "Waiting for the server to be ready..."
          echo http://localhost:$PORT/artefacts/api/hello
          npx wait-on -t=60s http://localhost:$PORT/artefacts/api/hello
          echo server is ready
          npx playwright test
        env:
          PORT: ${{ vars.WEB_PORT }}

      - name: Show server logs on test failure
        if: failure()
        run: docker compose logs

      - name: Stop the apps
        if: always()
        run: |
          docker compose down
          kill $(lsof -t -i:${{vars.WEB_PORT}})

